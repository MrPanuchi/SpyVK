@model SpyVK.ViewModels.SignInApplicationUser

<h1>Sign In</h1>

<form asp-controller="User" asp-action="ExternalSignIn" asp-route-returnUrl = "@Model.ReturnUrl" method="post">
    @foreach(var provider in Model.ExternalProviders)
    {
        <button 
            type="submit"
            name="provider"
            value="@provider.Name">@provider.DisplayName</button>
    }
</form>

<form asp-controller="User" asp-action="SignIn" method="post">

    <div asp-validation-summary="All"></div>

    <input hidden asp-for="ReturnUrl" />

    <div>
        <label>User Name</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <p> 
        <button type="submit"> Sign in</button>
    </p>
</form>

<a asp-controller="Home" asp-action="Index">To home</a>